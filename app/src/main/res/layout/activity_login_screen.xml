<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@android:color/white"
    tools:context="com.example.nainjanewswatch.LoginScreen"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        tools:context="com.example.nainjanewswatch.LoginScreen"
        >
        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textSize="25sp"
            android:padding="@dimen/activity_vertical_margin"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:background="@android:color/darker_gray"
            android:text="@string/loginHead" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/simpleUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingTop="15dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="10dp"
            android:hint="Email Address">

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_edit"
                android:drawablePadding="8dp"
                android:textColor="@android:color/black"
                android:maxLines="1"
                android:textSize="20dp"
                android:inputType="textEmailAddress"
                android:lines="1"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/simplePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingTop="15dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="10dp"
            android:hint="Enter Password">

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_edit"
                android:drawablePadding="8dp"
                android:maxLines="1"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                android:inputType="textPassword"
                android:lines="1"
                />
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="New Text"
            android:id="@+id/status"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="16sp"
            android:textStyle="bold|italic"
            android:scrollbars="vertical"
            android:gravity="center"
            android:layout_weight="0.05"
            android:visibility="gone"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/click_to_login"
            android:id="@+id/btnSave"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
            android:drawableRight="@android:drawable/ic_menu_more"
            android:drawableLeft="@android:drawable/ic_menu_more"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/coloryellow" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>